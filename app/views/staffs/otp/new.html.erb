<h2>Two-Factor Authentication</h2>

<p>A verification code has been sent to your email. Please enter it below to complete your login.</p>

<%= form_tag staffs_otp_path do %>
  <div class="field">
    <%= label_tag :otp_code, "Verification Code" %>
    <%= text_field_tag :otp_code, nil, autofocus: true, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= check_box_tag :remember_device, "1" %>
    <%= label_tag :remember_device, "Remember this device for 30 days" %>
  </div>
  
  <div class="actions">
    <%= submit_tag "Verify" %>
  </div>
<% end %>

<%= link_to "Back", new_staff_session_path %>